set -eo pipefail

function fail() {
  echo -e "\e[31mFail:\e[m $* ðŸ˜­"
  exit 1
}

function install_opam() {
  local install_type=$1
  local version=$2
  local install_path=$3

  local platform

  if [[ "$OSTYPE" == "linux"* ]]; then
    platform="x86_64-linux"
  elif [[ "$OSTYPE" == "darwin"* ]]; then
    platform="x86_64-darwin"
  elif [[ "$OSTYPE" == "openbsd"* ]]; then
    platform="x86_64-openbsd"
  fi

  local download_url="https://github.com/ocaml/opam/releases/download/${version}/opam-${version}-${platform}"

  (
    echo "âˆ— Downloading and installing opam..."
    mkdir -p "${install_path}/bin"
    curl --silent --location --output "${install_path}/bin/opam" -C - "$download_url" || fail "Could not download Opam $version"
    chmod +x "${install_path}/bin/opam" || fail "Could not find Opam binary"
    echo "The installation was successful!"
  ) || (
    rm -rf $install_path
    fail "An error occurred"
  )
}

install_opam "$ASDF_INSTALL_TYPE" "$ASDF_INSTALL_VERSION" "$ASDF_INSTALL_PATH"
